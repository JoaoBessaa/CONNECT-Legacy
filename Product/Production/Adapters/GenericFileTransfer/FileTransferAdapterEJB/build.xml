<project name="FileTransferAdapterEJB" default="default" basedir="." xmlns:ejbjarproject="http://www.netbeans.org/ns/j2ee-ejbjarproject/3">
  <description>Builds, tests, and runs the project FileTransferAdapterEJB.</description>
  <import file="nbproject/build-impl.xml"/>
  
  <import file="../../../../build.lib.xml" />

  <target name="build">
    <property name="target-to-call" value="dist" />
    <antcall target="call-target-in-isolation-if-out-of-date" />
  </target>
  <target name="clean-build" depends="clean,build" />
  <target name="clean-test" depends="clean-build,test" />
  <target name="build-test" depends="build,test" />

  <target name="wsimport-service-AdapterSubscriptionService" depends="wsimport-init">
    <property name="service-wsdl-AdapterSubscriptionService" location="${meta.inf}/xml-resources/web-services/AdapterSubscriptionService/wsdl/AdapterSubscriptionManagement.wsdl"/>

    <property name="targetLocation-AdapterSubscriptionService" location="${meta.inf}/wsdl/AdapterSubscriptionService"/>
    <property name="sourceLocation-AdapterSubscriptionService" location="${meta.inf}/xml-resources/web-services/AdapterSubscriptionService/wsdl/"/>
    <copy todir="${targetLocation-AdapterSubscriptionService}">
      <fileset dir="${sourceLocation-AdapterSubscriptionService}"/>
    </copy>
    <copy todir="${basedir}/${meta.inf}/wsdl/schemas/">
      <fileset dir="${basedir}/${meta.inf}/xml-resources/web-services/AdapterSubscriptionService/schemas/"/>
    </copy>
  </target>

  <target depends="init,compile-test,-pre-test-run,-do-test-run" if="have.tests" name="-post-test-run">
    <copy todir="${nhin.project.home}\UnitTestResults">
      <fileset dir="${build.test.results.dir}"/>
    </copy>
    <fail if="tests.failed" unless="ignore.failing.tests">Some tests failed; see details above.</fail>
  </target> 
</project>
