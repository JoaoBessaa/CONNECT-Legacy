<!-- in the project's Project Properties dialog box.-->
<project name="GatewayInternalWeb" default="default" basedir=".">
  <description>Builds, tests, and runs the project GatewayInternalWeb.</description>
  <import file="../../../build.lib.xml" />
  <import file="nbproject/build-impl.xml"/>

  <property name="deploy.type" value="war" />
  <property name="deploy.isDeployable" value="true"/>

  <target name="build">
    <property name="target-to-call" value="dist" />
    <antcall target="call-target-in-isolation-if-out-of-date" />
  </target>
  <target name="clean-build" depends="clean,build" />
  <target name="clean-test" depends="clean-build,test" />
  <target name="build-test" depends="build,test" />

  <target name="wsimport-service-AuditRepository" depends="wsimport-init">
    <copy todir="${build.web.dir}/WEB-INF/wsdl/AuditRepository">
      <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/AuditRepository/wsdl/"/>
    </copy>
    <copy todir="${build.web.dir}/WEB-INF/wsdl/schemas">
      <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/AuditRepository/schemas/"/>
    </copy>
  </target>

  <target name="wsimport-service-PatientCorrelationServiceSecured" depends="wsimport-init">
    <copy todir="${build.web.dir}/WEB-INF/wsdl/PatientCorrelationServiceSecured">
      <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/PatientCorrelationServiceSecured/wsdl/"/>
    </copy>
    <copy todir="${build.web.dir}/WEB-INF/wsdl/schemas">
      <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/PatientCorrelationServiceSecured/schemas/"/>
    </copy>
  </target>

  <target name="wsimport-service-PatientCorrelationFacadeDteService" depends="wsimport-init">
    <copy todir="${build.web.dir}/WEB-INF/wsdl/PatientCorrelationFacadeDteService">
      <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/PatientCorrelationFacadeDteService/wsdl/"/>
    </copy>
    <copy todir="${build.web.dir}/WEB-INF/wsdl/schemas">
      <fileset dir="${basedir}/${conf-dir}xml-resources/web-services/PatientCorrelationFacadeDteService/schemas/"/>
    </copy>
  </target>

  <target depends="init" if="netbeans.home" name="undeploy-clean" unless="from.commandline">
    <nbundeploy failOnError="false" startServer="false"/>
  </target>
</project>
