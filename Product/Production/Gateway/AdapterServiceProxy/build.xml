<?xml version="1.0" encoding="UTF-8"?>

<project name="AdapterServiceProxy" default="default" basedir=".">
    <description>Builds, tests, and runs the project AdapterServiceProxy.</description>
    <import file="../../../build.lib.xml" />
    <import file="nbproject/build-impl.xml"/>

    <target name="build">
      <property name="target-to-call" value="jar" />
      <antcall target="call-target-in-isolation-if-out-of-date" />
    </target>
	
    <target name="clean-build" depends="clean,build" />
    <target name="clean-test" depends="clean-build,test" />
    <target name="build-test" depends="build,test" />
    
    <target depends="init,compile-test,-pre-test-run,-do-test-run" if="have.tests" name="-post-test-run">
        <copy todir="${nhin.project.home}\UnitTestResults">
            <fileset dir="${build.test.results.dir}"/>
        </copy>
        <fail if="tests.failed" unless="ignore.failing.tests">Some tests failed; see details above.</fail>
    </target>
    
    <target name="wsimport-client-AdapterDocQuerySecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterDocRetrieveSecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterPatientDiscoverySecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterSubjectDiscoverySecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterNotificationConsumer" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterSubscriptionManagement" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterNotificationConsumerSecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterSubscriptionManagementSecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterXDRRequestSecured" depends="wsimport-init"/>
    <target name="wsimport-client-AdapterXDRResponseSecured" depends="wsimport-init"/>
</project>
