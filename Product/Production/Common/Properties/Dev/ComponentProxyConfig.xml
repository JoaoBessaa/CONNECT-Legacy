<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
       default-lazy-init="true">
       
	<!-- These beans are not initialized when this configuration file is loaded based on the setting 
	default-lazy-init="true" in the "beans" element. This is done to allow the use of a master configuration
	file without requireing all of the project libraries to be loaded to run a single component. -->

<!-- 
	The beans available in this file must be identified in the "description" element for the Spring configuration application. Beans are listed between braces 
	in the description separated with a comma like the following sample: {somebean,anotherbean}
-->
	<description>Beans included in this file: {adapterpip,adapterpep}</description>

	<!-- ADAPTER PIP -->
	<!-- No-op Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpip.proxy.AdapterPIPProxyOptInNoOpImpl" id="adapterpipnoop" name="adapterpipnoop"> 
		<meta key="impltype" value="noop"/>
	</bean> 

	<!-- No-op deny Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpip.proxy.AdapterPIPProxyNoOpImpl" id="adapterpipnoopdeny" name="adapterpipnoopdeny"> 
	</bean> 

	<!-- Java Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpip.proxy.AdapterPIPJavaProxy" id="adapterpip" name="adapterpipjava"> 
		<meta key="impltype" value="java"/>
		<meta key="default" value="true"/>
	</bean> 

	<!-- Unsecured web service Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpip.proxy.AdapterPIPWebServiceProxy" id="adapterpipwsunsecured" name="adapterpipwsunsecured"> 
		<meta key="impltype" value="wsunsecured"/>
	</bean> 

	
	<!-- ADAPTER PEP -->
	<!-- No-op Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpep.proxy.AdapterPEPProxyNoOpImpl" id="adapterpep" name="adapterpepnoop"> 
		<meta key="impltype" value="noop"/>
		<meta key="default" value="true"/>
	</bean> 

	<!-- No-op deny Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpep.proxy.AdapterPEPProxyDenyNoOpImpl" id="adapterpepnoopdeny" name="adapterpepnoopdeny"> 
	</bean> 

	<!-- Java Implementation -->
	<bean class="gov.hhs.fha.nhinc.policyengine.adapterpep.proxy.AdapterPEPJavaProxy" id="adapterpepjava" name="adapterpepjava"> 
		<meta key="impltype" value="java"/>
	</bean> 

</beans>
