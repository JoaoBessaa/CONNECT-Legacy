<?xml version="1.0" encoding="UTF-8"?>
<project name="ivy.properties">

  <property name="ivy.settings.dir" value="${root.project.directory.path}" />
  <property name="ivy.cache.dir" value="${ivy.settings.dir}/../ivy-cache" />
  <property name="ivy.project.cache.dir" value="${ivy.settings.dir}/../ivy-project-cache" />

  <property name="lib.dir" location="${project.dir}/lib" />

  <fileset id="classpath.compile" dir="${lib.dir}/compile">
    <include name="*.jar" />
  </fileset>

  <fileset id="classpath.runtime" dir="${lib.dir}/runtime">
    <include name="*.jar" />
  </fileset>

  <fileset id="classpath.test" dir="${lib.dir}/test">
    <include name="*.jar" />
  </fileset>

  <fileset id="classpath.earlib" dir="${lib.dir}/earlib">
    <include name="*.jar" />
  </fileset>
</project>